{
    "root": true,
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "jquery": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module"
    },
    "globals": {},
    "plugins": [],
    "rules": {
        "indent": ["error", 4],
        "no-mixed-spaces-and-tabs": 2,
        "no-extra-semi": 2,
        "semi-spacing": 2,
        "no-spaced-func": 2,
        "key-spacing": [2, {
            "beforeColon": false,
            "afterColon": true
        }],
        "keyword-spacing": [2, {
            "before": true,
            "after": true,
            "overrides": {
                "if": {"after": true},
                "for": {"after": true},
                "while": {"after": true},
                "catch": {"after": true}
            }
        }],
        "object-curly-spacing": 0,
        "space-before-blocks": 2,
        "space-infix-ops": 2,
        "space-unary-ops": [2, {
            "words": true,
            "nonwords": false
        }],
        "comma-spacing": [2, {"before": false, "after": true}],
        "comma-style": 2,
        "eol-last": 2,
        "no-multiple-empty-lines": 2,
        "quotes": [2, "single"],
        "camelcase": 1,
        "valid-typeof": 2,
        "no-undefined": 0,
        "no-debugger": 2,
        "no-dupe-args": 2,
        "no-dupe-keys": 2,
        "no-duplicate-case": 0,
        "use-isnan": 2
    }
}